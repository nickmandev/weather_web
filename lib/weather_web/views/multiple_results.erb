<body>
  <div class="container-fluid">
    <h3>Select from the list with results</h3>
    <form action="/multiple_results" method="post">
      <div class="row">
        <div class="col-xs-8">
          <% multiple_results.each do |val| %>
              <div class="radio">
                <label>
                  <input type="radio" name="city_id" value='<%=val[:city_id]%>'>
                  <%=("City: #{val[:city_name]},
                      Country: #{val[:country]},
                      Latitude: #{val[:latitude]},
                      Longitude: #{val[:longitude]}")%>
                </label>
              </div>
          <% end %>
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </form>
  </div>
</body>
