<div class="container-fluid">
  <div class="col-md-12">
    <% unless session[:msg].blank? %>
      <h5 class="text-center error-message"><%= session[:msg] %></h5>
    <% end %>
    <h1 class="text-center h1">Favorites</h1>
    <h4 class="text-center h4">To remove city form Favorites click on the <i class="fa fa-remove"></i></h4>
    <% favorites.each do |fav| %>
      <ol class="list-group">
        <li class="list-group-item clearfix">
          <div class="pull-right">
            <form action="/favorites/destroy" method="post">
              <input type="hidden" value='<%= fav[:id] %>' name="city_id">
              <button type="submit" class="remove-button" id="favorites-remove" ><i class="fa fa-2x fa-remove"></i></button>
            </form>
          </div>
          <div class="pull-right">
            <h3><object data="<%= fav[:icon]%>" type="image/svg+xml" id="fav_icon"></object> </h3>
          </div>
          <div class="col-xs-5 h3">
            <h2><%=fav[:name] %></h2>
            <h3><%= "#{fav[:weather]}, #{fav[:temp]}Â°C"%></h3>
          </div>
        </li>
      </ol>
    <% end %>
  </div>
</div>
